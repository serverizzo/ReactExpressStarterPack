{
  "name": "reactexpress",
  "version": "1.0.0",
  "description": "Starter kit for creating React and Express apps",
  "main": "server.js",
  "scripts": {
    "client-install": "cd client && yarn install",
    "server-install": "yarn install",
    "install-both": "concurrently \"yarn run client-install\" \"yarn run server-install\"",
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "cd client && yarn run start",
    "dev": "concurrently \"yarn run start\" \"yarn run client\""
  },
  "author": "Brad Traversy",
  "license": "MIT",
  "devDependencies": {
    "nodemon": "^1.14.6"
  },
  "dependencies": {
    "concurrently": "^3.5.1",
    "express": "^4.16.2"
  }
}